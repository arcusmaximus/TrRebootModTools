<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:shared="using:TrRebootTools.Shared.Controls"
		mc:Ignorable="d" Width="800" Height="450" MinWidth="300" MinHeight="200"
		x:Class="TrRebootTools.ModManager.VariationSelectionWindow"
		Title="Select the variation to install">
	<Grid RowDefinitions="50, *, 60">
		<TextBlock Name="_lblIntro" VerticalAlignment="Center" Grid.Row="0">
			The mod "{0}" contains multiple variations. Please select the one you'd like to install.
		</TextBlock>

		<shared:SplitContainer Orientation="Horizontal" Grid.Row="1" PanelSizes="200, *">
			<ListBox Name="_lstVariations" SelectionChanged="OnVariationSelected" DoubleTapped="OnVariationDoubleClicked" Grid.Column="0">
			</ListBox>

			<shared:SplitContainer Name="_splitVariationDetails" Orientation="Vertical">
				<Image Name="_imgVariationImage" />
				<TextBox Name="_txtVariationDescription" IsReadOnly="True" />
			</shared:SplitContainer>
		</shared:SplitContainer>

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="10" Grid.Row="2">
			<Button Name="_btnOK" Click="OnOKClicked" Width="100" IsDefault="True">OK</Button>
			<Button Name="_btnCancel" Click="OnCancelClicked" Width="100" IsCancel="True">Cancel</Button>
		</StackPanel>
	</Grid>
</Window>
