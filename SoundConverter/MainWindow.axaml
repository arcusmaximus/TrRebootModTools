<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        Width="700" Height="500"
        MinWidth="400" MinHeight="350"
        x:Class="TrRebootTools.SoundConverter.MainWindow"
        Icon="/icon.ico">

    <Grid RowDefinitions="*,auto" Margin="20">
        <Grid Name="_grdOptions" RowDefinitions="auto,*,auto" Grid.Row="0">
            <!-- Game selection -->
		    <StackPanel Orientation="Vertical" Margin="0 0 0 10" Grid.Row="0">
			    <Label FontWeight="Bold">Game:</Label>
                <StackPanel Orientation="Horizontal" Spacing="20">
				    <RadioButton Name="_radTr2013">TR2013</RadioButton>
                    <RadioButton Name="_radRise">ROTTR</RadioButton>
                    <RadioButton Name="_radShadow">SOTTR</RadioButton>
                </StackPanel>
            </StackPanel>

            <!-- Input file list -->
            <Grid RowDefinitions="auto,*,auto" Margin="0 0 0 10" Grid.Row="1">
			    <Label FontWeight="Bold" Grid.Row="0">
                    Input files:
                </Label>

                <ListBox Name="_lstInputFiles" SelectionMode="Multiple" Margin="0 0 0 2"
                         DragDrop.AllowDrop="True" DragDrop.DragOver="OnDragFilesOver" DragDrop.Drop="OnDropFiles"
                         Grid.Row="1">
                </ListBox>

                <Button Click="OnAddInputFilesClick" HorizontalAlignment="Left" Padding="20 10" Grid.Row="2">
                    Add files...
                </Button>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="2" Grid.Row="2">
                    <Button Click="OnRemoveSelectedInputFilesClick" Padding="20 10">
                        Remove selected
                    </Button>
                    <Button Click="OnClearInputFilesClick" Padding="20 10">
                        Clear
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Output folder -->
            <StackPanel Margin="0 0 0 10" Grid.Row="2">
			    <Label FontWeight="Bold">
                    Output folder:
                </Label>
                <Grid ColumnDefinitions="*,50" ColumnSpacing="2">
				    <TextBox Name="_txtOutputFolder" HorizontalAlignment="Stretch" Grid.Column="0">
                    </TextBox>
                    <Button Click="OnBrowseOutputFolderClick" Grid.Column="1">
                        ...
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- Convert button and progress bar -->
        <Button Name="_btnConvert" Click="OnConvertClick" Padding="40 15" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            Convert
        </Button>
        <Grid Name="_grdProgress" ColumnDefinitions="*,auto" IsVisible="False" Grid.Row="1">
			<ProgressBar Name="_progressBar" Margin="0 10 10 10" Grid.Column="0">
            </ProgressBar>
            <Button Name="_btnCancel" Click="OnCancelClick" Padding="40 15" HorizontalAlignment="Center" Grid.Column="1">
                Cancel
            </Button>
        </Grid>
    </Grid>
</Window>
