<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:logging="using:TrRebootTools.HookTool.Logging"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TrRebootTools.HookTool.AccessLogControl">
    <Grid RowDefinitions="auto,*,60" RowSpacing="2">
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Spacing="2" Grid.Row="0">
			<ToggleButton Name="_btnEnableLogging" IsChecked="true" IsCheckedChanged="OnEnableLoggingChanged" ToolTip.Tip="Enable/disable logging">
				<Image Source="/Resources/EnableLogging.png" Stretch="None"/>
            </ToggleButton>
            <Button Click="OnClearLogClick" ToolTip.Tip="Clear log">
				<Image Source="/Resources/ClearLists.png" Stretch="None"/>
            </Button>
            <Button Click="OnCopyClick" Margin="10 0 0 0" ToolTip.Tip="Copy selected entries to clipboard">
				<Image Source="/Resources/Copy.png" Stretch="None"/>
            </Button>
            <Button Click="OnSaveClick" ToolTip.Tip="Save complete log to CSV file">
				<Image Source="/Resources/Save.png" Stretch="None"/>
            </Button>
        </StackPanel>
        <TextBox Name="_txtFilter" Opacity="0.5" HorizontalAlignment="Right" Width="200" Margin="2" Grid.Row="0"
                 GotFocus="OnFilterGotFocus" TextChanged="OnFilterChanged" LostFocus="OnFilterLostFocus">
            Filter
        </TextBox>

        <logging:LogListView Name="_lstLog" SelectionMode="Multiple" Grid.Row="1"
                             KeyDown="OnLogKeyDown" SelectionChanged="OnLogSelectionChanged" DoubleTapped="OnLogDoubleClick">
        </logging:LogListView>

        <Button Name="_btnExtract" Click="OnExtractClick" IsEnabled="False" Grid.Row="2">
			Extract
        </Button>
    </Grid>
</UserControl>
