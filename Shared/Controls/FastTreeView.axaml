<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
             xmlns:controls="using:TrRebootTools.Shared.Controls"
             x:Class="TrRebootTools.Shared.Controls.FastTreeView">
    <controls:FastTreeViewListBox Name="_listBox" SelectionChanged="OnListBoxSelectionChanged" ItemExpandedChanged="OnItemExpandedChanged">
        <controls:FastTreeViewListBox.Styles>
			<Style Selector="Run.highlight">
				<Setter Property="Background" Value="Lavender" />
            </Style>
        </controls:FastTreeViewListBox.Styles>
    </controls:FastTreeViewListBox>
</UserControl>
