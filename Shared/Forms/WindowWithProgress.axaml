<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TrRebootTools.Shared.Forms.WindowWithProgress"
        Title="WindowWithProgress" Padding="4">
    <DockPanel Name="_pnlMain" VerticalSpacing="2">
		<DockPanel DockPanel.Dock="Bottom">
            <ProgressBar Name="_progressBar" Maximum="1" Width="200" DockPanel.Dock="Right" IsVisible="False" />
            <TextBlock Name="_lblStatus" Padding="0 4" VerticalAlignment="Center" />
        </DockPanel>
    </DockPanel>
</Window>
